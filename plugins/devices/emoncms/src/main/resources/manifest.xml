<config>
    <properties>
        <property name="name" value="Emoncms Data Poster"/>
        <property name="description" value="Plugin to enable data to be posted to Emoncms remote server."/>
        <property name="version" value="0.1"/>
        <property name="required" value="5.5.0"/>
        <property name="category"       value="protocol"/>
        <property name="short-name" value="emoncms"/>
        <property name="startup-time"   value="on load"/>

        <property name="target" value="http://emoncms.org/input/post.json"/>
        <property name="node" value="1"/>
        <!-- Set your API key from your Emoncms account here.. -->
        <property name="apikey" value="3b76dda4a6df96f748248ea949a3510f"/>

        <!-- Emoncms recommendation is to post not more than every 5-10 seconds -->
        <!-- See http://emoncms.org/site/usage for more info -->
        <!-- settings are in seconds -->
        <property name="post-interval"   value="10"/>
        <!-- If we fail to post the data, we delay the next try by -->
        <!-- doubling the polling interval for each failure. -->
        <!-- here we set the maximum delay  -->
        <property name="max-post-interval"   value="3600"/>
        <!-- and here the time before we give up (86,400s = 1 day)-->
        <property name="giveup-time"   value="86400"/>

        <!-- Mapping of text values to numbers before sending to Emoncms. -->
        <!-- All values stored here as strings.. -->
        <property name="valuemap-true" value="1"/>
        <property name="valuemap-false" value="0"/>
    </properties>
</config>

                
