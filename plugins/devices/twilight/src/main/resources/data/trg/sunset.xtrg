<com.freedomotic.reactions.Trigger>
    <name>At sunset</name>
    <description>When the sun sets</description>
    <channel>app.event.sensor.calendar.event.twilight</channel>   
    <delay>0</delay>
    <payload>
        <payload>
 <statement>
                <logical>AND</logical>
                <attribute>isSunset</attribute>
                <operand>EQUALS</operand>
                <value>true</value>
            </statement>
        </payload>
    </payload>
</com.freedomotic.reactions.Trigger>
